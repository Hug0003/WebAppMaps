@using Web.ViewModel
@model SalleViewModel

<div class="search-room-container">
    <a asp-controller="Etages" asp-action="CreateEtage">Créer un étage</a>
    <a asp-controller="Etages" asp-action="CreateSalle">Créer une salle</a>

    <div class="form-section">
        <form asp-action="formSearchRoom" class="form">
            <input name="Niveau" placeholder="Numéro étage" class="input-field" />
            <button type="submit" class="btn">Rechercher</button>
        </form>
    </div>

    @if (Model.salle != null)
    {

            <section class="section_imgPlan">
                <div>
                    <img src="~/@Model.salle.Etage.ImgPlanEtagePath" alt="Plan d'étage" class="img-plan" />
                </div>
            </section>

            <section class="section_infoSalle">

                <ul class="list-info">
                    <li><strong>Nom Bureau :</strong> @Model.salle.Nom</li>
                    <li><strong>Numéro :</strong> @Model.salle.Numero</li>
                    <li><strong>Favori :</strong> @Model.salle.Favori</li>
                    <li><strong>CoordX2BotRight :</strong> @Model.salle.CoordX2BotRight</li>
                    <li><strong>Étage :</strong> @Model.salle.Etage.Nom</li>
                </ul>

                <div class=".container_imageSalle">
                    <div>
                        <img src="~/@Model.salle.ImgSallePath" alt="Salle" />

                    </div>
                </div>
            </section>
    }

